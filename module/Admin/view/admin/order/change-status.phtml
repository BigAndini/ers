<?php
$form = $this->form;
$form->setAttribute('action', $this->url('admin/order', 
        array(
            'action' => 'change-status',
            'id' => $order->getId()
            )
        ));
$form->prepare();

$title = 'Set status for order '.$order->getCode()->getValue().': '.$order->getBuyer();
