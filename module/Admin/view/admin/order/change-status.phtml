<div class="row">
    <div class="col-md-12">
        <?php echo $this->formRow($form->get('status_id')); ?>
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-right">
        <?php echo $this->formSubmit($form->get('submit')); ?>
    </div>
</div>

